<Window x:Class="Ellipsoidus.Windows.OffsetParametersWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="Height" 
        Background="#FFF5F5F5" 
        Title="Offset Parameters" 
        Width="250" 
        WindowStyle="ToolWindow" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        WindowStartupLocation="CenterOwner" >
    <StackPanel Margin="8">
        <TextBlock>Offset distance [m]</TextBlock>
        <TextBox Name="distBox">22224</TextBox>
        <Canvas Margin="4" />
        <StackPanel Name="maxDevPanel">
            <TextBlock>Max deviation [m]</TextBlock>
            <TextBox Name="maxDevBox">0.1</TextBox>
        </StackPanel>
        <Separator Margin="0,12" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" Padding="16,2" Width="80" Click="okButton_Click">OK</Button>
            <Button IsCancel="True" Padding="16,2" Margin="8,0" Width="80" Click="cancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>